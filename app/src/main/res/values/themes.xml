<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocumentManagerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="loginField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeColor">@color/primary_text_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="maxLines">1</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>
    <style name="FingerprintButton" parent="ThemeOverlay.Material3.Button">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="strokeColor">@color/main_text_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="icon">@drawable/fingerprint</item>
        <item name="iconTint">@color/main_text_color</item>
    </style>
    <style name="TopbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/main_text_color</item>
        <item name="titleTextColor">@color/main_text_color</item>
    </style>
    <style name="menuCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="menuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>